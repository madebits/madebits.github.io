# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 15
        color_good = "#9fe5c1"
        color_degraded = "#FFFEDA"
        color_bad = "#FFA3A3"
        markup = pango
        #output_format="none"
}

#order += "ipv6"
order += "volume master"
order += "disk /"
order += "disk /data2"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_temperature 0"
order += "load"
order += "cpu_usage"
order += "tztime local"

# %frequency %ip (%bitrate)

wireless _first_ {
        format_up = "<span background='#7b699e'>📶 %essid %quality </span>"
        format_down = "<span background='#7b699e'>📡 ? </span>"
        separator = false
        separator_block_width = 0
}

ethernet _first_ {
    # if you use %speed, i3status requires root privileges
    #  (%speed)
    format_up = "<span background='#7b699e'>🙂 %ip </span>"
    format_down = "<span background='#7b699e'>😡 ? </span>"
    separator = false
    separator_block_width = 2
}

battery all {
       format = "<span background='#7b699e'>%status %percentage 🔻%remaining </span>"
       format_down = "No battery"
       status_chr = "⚡ CHR"
       status_bat = "🔋 BAT"
       status_unk = "❓ UNK"
       status_full = "😎 FULL"
       #path = "/sys/class/power_supply/BAT%d/uevent"
       low_threshold = 30
       threshold_type = time
       separator = false
       separator_block_width = 2
}

tztime local {
    format = "<span background='#44865b'>%time</span>"
    format_time = "📅 %b %a %d 🕛 %H:%M "
}

load {
    format = "<span background='#7b699e'>🔥 %1min </span>"
    separator = false
    separator_block_width = 0
}

cpu_temperature 0 {
    format = "<span background='#7b699e'>🌡️%degrees °C </span>"
    path = "/sys/devices/platform/coretemp.0/hwmon/hwmon*/temp1_input"
    separator = false
    separator_block_width = 0
}

cpu_usage {
    format = "<span background='#7b699e'>🚦%usage </span>"
    max_threshold = 70
    degraded_threshold = 40
    separator = false
    separator_block_width = 2
}

disk "/" {
    format = "<span background='#7b699e'>💿 %avail </span>"
    separator = false
    separator_block_width = 0
    prefix_type=custom
}

disk "/data2" {
    format = "<span background='#7b699e'>📀 %avail </span>"
    prefix_type=custom
    separator = false
    separator_block_width = 2
}

volume master {
    format = "<span background='#7b699e'>🔊 %volume </span>"
    format_muted = "<span background='#7b699e'>🔇 %volume </span>"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
    separator = false
    separator_block_width = 2
}
